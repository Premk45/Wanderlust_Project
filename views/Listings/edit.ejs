<% layout("/layouts/boilerplate") %>
<div class="row mb-3 mt-3">
<div class="col-6 offset-3">
    <h1>Edit Listing</h1>
    <form method="post" action="/Listings/<%= list.id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-lable">Title:</label>
            <input class="form-control" 
                type="text" 
                name="listing[title]" 
                value = "<%= list.title %>" 
                id="title"
                required
            >
            <div class="invalid-feedback">Title should be valid.</div>
        </div>
        
        <div class="mb-3">
            <label for="description" class="form-lable">Description:</label>
            <textarea class="form-control"  
                name="listing[description]" 
                id="description" 
                cols="50" rows="5" required> <%= list.description %> </textarea>
            <div class="invalid-feedback">Description should be valid.</div>
        </div>

        <div class="mb-3">
            <p>Old Image :</p>
            <img src="<%= originalImage %>" alt="listing_image">
        </div>

        <div class="mb-3">
            <label for="image" class="form-lable" >Upload New Image :</label>
            <input class="form-control" 
                type="file" 
                name="listing[image]" 
                id="image" 
            >
        </div>

        <div class="row">
            <div class="mb-3 col-4">
                <label for="price" class="form-lable">Price:</label>
                <input class="form-control" 
                    type="number" 
                    name="listing[price]" 
                    id="price" 
                    value=<%= list.price %>
                    required
                >
                <div class="invalid-feedback">Price should be valid.</div>
            </div>

            <div class="mb-3 col-8">
                <label for="country" class="form-lable">Couuntry:</label>
                <input class="form-control" type="text" 
                    name="listing[country]" 
                    id="country" 
                    value=<%= list.country %>
                    required
                >
                <div class="invalid-feedback">Country should be valid.</div>
            </div>
        </div>
       
        <div class="mb-3">
            <label for="location" class="form-lable">Location:</label>
            <input class="form-control" 
                type="text" 
                name="listing[location]" 
                id="location" 
                value=<%= list.location %>
                required
            >
            <div class="invalid-feedback">Location should be valid.</div>
        </div>
        
        <button class="btn btn-dark btn-edit mb-5">Edit</button>
    </form>
</div>
</div>
<script src="/JavaScript/validate.js"></script>
