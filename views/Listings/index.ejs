<% layout("/layouts/boilerplate") %>

<style>
    .filters{
        display: flex;
        flex-wrap: wrap;
        margin-left: 2rem;
        align-items: center;
    }

    .filter{
        text-align: center;
        margin-right: 2rem;
        margin-top: 2rem;
        opacity: 0.7;
    }

    .filter:hover{
        opacity: 1;
        cursor: pointer;
    }

    .filter p {
        font-size: 0.8rem;
    }

    .gst{
        display: none;
    }

    .tax-toggle{
        border: 1px solid black;
        border-radius: 1rem;
        height: 3.25rem;
        padding: 1rem;
        margin-left: 3rem;
        display: flex;
        align-items: center;
    }
</style>

<div class="filters">
    <div class="filter">
        <div> <i class="fa-sharp fa-solid fa-fire"></i> </div>
        <p>Trending</p>
    </div>

    <div class="filter">
        <div> <i class="fa-sharp fa-solid fa-bed"></i> </div>
        <p>Rooms</p>
    </div>

    <div class="filter">
        <div> <i class="fa-sharp fa-solid fa-mountain-city"></i> </div>
        <p>Iconic cities</p>
    </div>

    <div class="filter">
        <div> <i class="fa-sharp fa-solid fa-mountain"></i> </div>
        <p>Mountains</p>
    </div>

    <div class="filter">
        <div> <i class="fa-sharp fa-solid fa-chess-rook"></i> </div>
        <p>Castles</p>
    </div>
    
    <div class="filter">
        <div> <i class="fa-sharp fa-solid fa-person-swimming"></i> </div>
        <p>Amaxing pools</p>
    </div>

    <div class="filter">
        <div> <i class="fa-sharp fa-solid fa-person-hiking"></i> </div>
        <p>Camping</p>
    </div>

    <div class="filter">
        <div> <i class="fa-sharp fa-solid fa-cow"></i> </div>
        <p>Farms</p>
    </div>
    
    <div class="filter">
        <div> <i class="fa-sharp fa-solid fa-snowflake"></i> </div>
        <p>Arctic</p>
    </div>

    <div class="filter">
        <div> <i class="fa-sharp fa-solid fa-ship"></i> </div>
        <p>Boats</p>
    </div>
    
    <div class="filter">
        <div> <i class="fa-sharp fa-solid fa-igloo"></i> </div>
        <p>Domes</p>
    </div>

    <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
            <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
        </div>
    </div>
</div>
    <div class="row firstrow row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mb-5">
        <% for(let list of Listings){ %>
            <a href="/Listings/<%= list.id %>" class="card-link">
                <div class="card all-cards listing-card" >
                    <img src="<%= list.image.url %>" 
                        class="card-img-top" 
                        alt="Listing Image" 
                        style="height: 20rem;"
                    >
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                    <b> <p class="card-text"> <%= list.title %> </b>
                        <br>
                        &#8377; <%= list.price.toLocaleString("en-IN") %>/Night
                        &nbsp; &nbsp; <i class="gst"> +18% GST </i>
                    </p>
                    
                    </div>
                </div>
            </a>
        <% } %>
    </div>

    <script>
        let taxSwitch = document.getElementById("flexSwitchCheckDefault");
        taxSwitch.addEventListener("click" , () => {
            let taxSwitch = document.getElementsByClassName("gst");
            for(tax of taxSwitch){
                if(tax.style.display != "inline"){
                    tax.style.display = "inline";
                }
                else{
                    tax.style.display = "none";
                }
            }
            console.log(taxSwitch);
        })
    </script>

