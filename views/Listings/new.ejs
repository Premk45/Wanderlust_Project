<% layout("/layouts/boilerplate") %>

<div class="row mb-3 mt-3">
<div class="col-6 offset-3">
    <h1>Create New Listing</h1>
    <form method="post" action="/Listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-lable">Title:</label>
            <input class="form-control" 
                type="text" 
                name="listing[title]" 
                placeholder="Enter Title" 
                id="title"
                required
            >
            <div class="invalid-feedback">Title should be valid.</div>
        </div>
        
        <div class="mb-3">
            <label for="description" class="form-lable">Description:</label>
            <textarea  name="listing[description]" 
                id="description" 
                placeholder = "Enter Description" 
                cols="50" rows="5"
                class="form-control"
                required
            ></textarea>
            <div class="invalid-feedback">Description should be valid.</div>
        </div>


        <div class="mb-3">
            <label for="image" class="form-lable" >Add Listing Image :</label>
            <input class="form-control" 
                type="file" 
                name="listing[image]" 
                id="image" 
            >
        </div>

        <div class="row">
            <div class="mb-3 col-4">
                <label for="price" class="form-lable" >Price:</label>
                <input class="form-control" 
                    type="number" 
                    name="listing[price]" 
                    id="price" 
                    placeholder="Enter price"
                    required
                >
                <div class="invalid-feedback">Price should be valid.</div>
            </div>

            <div class="mb-3 col-8">
                <label for="country" class="form-lable">Couuntry:</label>
                <input class="form-control" 
                    type="text" 
                    name="listing[country]" 
                    id="country" 
                    placeholder="Enter Country Name"
                    required
                >
                <div class="invalid-feedback">Country should be valid.</div>
            </div> 
            
        </div>
        
        <div class="mb-3">
            <label class="form-lable" for="location">Location:</label>
            <input class="form-control" 
                type="text" 
                name="listing[location]" 
                id="location" 
                placeholder="Enter Location"
                required
            >
            <div class="invalid-feedback">Location should be valid.</div>
        </div> 

        <button class="btn btn-dark btn-add mb-5">Add</button>
    </form>
</div>
</div>

